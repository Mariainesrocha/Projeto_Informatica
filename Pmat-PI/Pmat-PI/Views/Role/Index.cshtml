@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
  
<h1 class="bg-info text-white"> Lista de Funções</h1>
<a asp-action="Create" class="btn btn-success">Criar Nova Função</a>
  
<table class="table table-sm table-bordered table-bordered text-center">
    <tr><th>ID</th><th>Nome</th><th> Apagar </th></tr>
    @foreach (var role in Model)
    {
        <tr>
            <td>@role.Id</td>
            <td>@role.Name</td>
            <td>
                <form asp-action="Delete" asp-route-id="@role.Id" method="post" align="center">
                    <button type="submit" style="background:transparent; border:none"><i style="font-size:30px; color:red" class="fa fa-trash"></i> </button>
                </form>
            </td>
        </tr>
    }
</table>
@model Pmat_PI.Models.ProvaModelo
@{
    <div class="modal fade" id="modalModelo" tabindex="-1" role="dialog" aria-labelledby="modalDeleteLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <form asp-controller="Provas" asp-action="AdicionarModelo">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Adicionar Novo Modelo</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input asp-for="IdProva" hidden value="@ViewData["ProvaId"]" />
                        <div class="form-group">
                            <label asp-for="IdModelo" class="control-label">Id do Modelo</label>
                            <input asp-for="IdModelo" class="form-control"/>
                            <span asp-validation-for="IdModelo" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Nivel" class="control-label"></label>
                            <input asp-for="Nivel"  class="form-control"/>
                            <span asp-validation-for="Nivel" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Não</button>
                        <button type="submit" class="btn btn-success" id="modalConfirmButton">Sim</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}

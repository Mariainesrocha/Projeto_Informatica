
@{
    <div class="modal fade" id="modalFuncoes" tabindex="-1" role="dialog" aria-labelledby="modalDeleteLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <form asp-controller="Role" asp-action="ChangeRoleAsync">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Alterar funções do utilizador</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <label>Adicionar: </label>
                            <select name="addRole" class="form-control" asp-items="ViewBag.AllRoles">
                                <option value="">-- Selecione a função --</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label>Remover: </label>
                            <select name="removeRole" class="form-control" asp-items="ViewBag.Roles">
                                <option value="">-- Selecione a função --</option>
                            </select>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Não</button>
                        <button type="submit" class="btn btn-success" id="modalConfirmButton">Sim</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}

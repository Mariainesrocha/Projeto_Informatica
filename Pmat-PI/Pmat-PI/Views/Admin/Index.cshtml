@model IEnumerable<User>

<h1 class="bg-info text-white">All Users</h1>
<a asp-action="Create" class="btn btn-secondary">Create a User</a>

<table class="table table-sm table-bordered">
    <tr><th>ID</th><th>Name</th><th>Age</th><th>Email</th></tr>
    @foreach (User user in Model)
    {
<tr>
    <td>@user.Id</td>
    <td>@user.Name</td>
    <td>@user.Age</td>
    <td>@user.Email</td>
    <td>
        <a asp-action="UpdateUser" asp-route-id="@user.Id" class="btn btn-primary">Edit</a>
    </td>
    <td>
        <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post">
            <button type="submit" class="btn btn-danger">Delete</button>
        </form>
    </td>
</tr>
    }
</table>
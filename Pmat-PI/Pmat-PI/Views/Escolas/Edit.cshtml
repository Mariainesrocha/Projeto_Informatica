@model Pmat_PI.Models.Escola

@{
    ViewData["Title"] = "Editar Escola";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/css/bootstrap-select.min.css">
<script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/js/bootstrap-select.min.js"></script>

<h1>Editar Escola</h1>
<hr />
<div class="row">
    <div class="col-lg-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-row">
                <div class="form-group col-md-9">
                    <label asp-for="NomeEscola" class="control-label">Nome da Escola</label>
                    <input asp-for="NomeEscola" class="form-control" />
                    <span asp-validation-for="NomeEscola" class="text-danger"></span>
                </div>
                <div class="form-group col-md-3">
                    <label asp-for="Gruponatureza" class="control-label">Natureza</label>
                    <select asp-for="Gruponatureza" class="form-control">
                        <option value="Publica"> Pública </option>
                        <option value="Privada"> Privada </option>
                    </select>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-2">
                    <label asp-for="IdTipoEscola" class="control-label">Tipo Escola</label>
                    <select asp-for="IdTipoEscola" class="form-control" asp-items="ViewBag.IdTipoEscola">
                        <option value="">-- Selecione Tipo de Escola --</option>
                    </select>
                    <span asp-validation-for="IdTipoEscola" class="text-danger" />
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="Website" class="control-label"></label>
                    <input asp-for="Website" class="form-control" />
                    <span asp-validation-for="Website" class="text-danger"></span>
                </div>
                <div class="form-group col-md-3">
                    <label asp-for="CodDgeec" class="control-label">Código DGEEC</label>
                    <input asp-for="CodDgeec" class="form-control" />
                    <span asp-validation-for="CodDgeec" class="text-danger"></span>
                </div>
                <div class="form-group col-md-3">
                    <label asp-for="CodDgpgf" class="control-label">Código DGPGF</label>
                    <input asp-for="CodDgpgf" class="form-control" />
                    <span asp-validation-for="CodDgpgf" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-3">
                    <label asp-for="Ensinos" class="control-label">Ensinos Ministrados</label>
                    <input asp-for="Ensinos" class="form-control" id="ensinosSubmit" hidden/>
                    <select name="ensinos" class="selectpicker" id="ensinos" multiple title="Selecione Ensino(s)">
                        <option value="A">A - Pré-Escolar</option>
                        <option value="B">B - 1 º Ciclo</option>
                        <option value="C">C - 2 º Ciclo</option>
                        <option value="D">D - 3 º Ciclo</option>
                        <option value="E">E- Secundário</option>
                        <option value="M">M - Artístico</option>
                        <option value="O">O - Profissional</option>
                    </select>
                </div>
                <!--
                            <div class="form-control-md col-md-10" style="color: dodgerblue; display: flex; align-items: center;">
                            <label style="padding-right: 1%; padding-top:2%; font-weight:bold">Legenda:</label>
                            <label style="padding-right: 2%; padding-top:2%">A - Pré-Escolar;</label>
                            <label style="padding-right: 2%; padding-top:2%">B - 1 º Ciclo;</label>
                            <label style="padding-right: 2%; padding-top:2%">C - 2 º Ciclo;</label>
                            <label style="padding-right: 2%; padding-top:2%">D - 3 º Ciclo;</label>
                            <label style="padding-right: 2%; padding-top:2%">E- Secundário;</label>
                            <label style="padding-right: 2%; padding-top:2%">M - Artístico;</label>
                            <label style="padding-top:2%">O - Profissional;</label>
                        </div>

                -->
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Morada" class="control-label"></label>
                    <input asp-for="Morada" class="form-control" />
                    <span asp-validation-for="Morada" class="text-danger"></span>
                </div>
                <div class="form-group col-md-3">
                    <label asp-for="CodigoPostal" class="control-label">Código Postal</label>
                    <div class="form-row">
                        <div class="form-group  col-lg-6">
                            <input asp-for="CodigoPostal" class="form-control" />
                            <span asp-validation-for="CodigoPostal" class="text-danger col-sm-2"></span>
                        </div>
                        <span class="col-sm-1">-</span>
                        <div class="form-group col-lg-5">
                            <input asp-for="ExtensaoCodPostal" class="form-control" />
                            <span asp-validation-for="ExtensaoCodPostal" class="text-danger col-sm-2"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group col-md-3">
                    <label asp-for="Localidade" class="control-label"></label>
                    <input asp-for="Localidade" class="form-control" />
                    <span asp-validation-for="Localidade" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-3">
                    <label asp-for="Telefone" class="control-label"></label>
                    <input asp-for="Telefone" class="form-control" />
                    <span asp-validation-for="Telefone" class="text-danger"></span>
                </div>
                <div class="form-group col-md-3">
                    <label asp-for="Fax" class="control-label"></label>
                    <input asp-for="Fax" class="form-control" />
                    <span asp-validation-for="Fax" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-3">
                    <label asp-for="Idconcelho" class="control-label">Concelho</label>
                    <select id="concelhos" asp-for="Idconcelho" class="form-control" asp-items="ViewBag.Idconcelho">
                        <option value="">-- Selecione Concelho --</option>
                    </select>
                    <span asp-validation-for="Idconcelho" class="text-danger" />
                </div>
                <div class="form-group col-md-3">
                    <label asp-for="IdFreguesia" class="control-label">Freguesia</label>
                    <select asp-for="IdFreguesia" id="freguesias" class="form-control" disabled="@(ViewBag.freguesia_id != null? null:"disabled")">
                        <option value="">-- Selecione Freguesia --</option>
                        @if (@ViewBag.freguesia_nome != null && @ViewBag.freguesia_id != null)
                        {
                            <option selected value="@ViewBag.freguesia_id"> @ViewBag.freguesia_nome </option>
                        }
                    </select>
                    <span asp-validation-for="IdFreguesia" class="text-danger"></span>
                </div>
                <div class="form-group col-md-3">
                    <label asp-for="Latitude" class="control-label"></label>
                    <input asp-for="Latitude" class="form-control" />
                    <span asp-validation-for="Latitude" class="text-danger"></span>
                </div>
                <div class="form-group col-md-3">
                    <label asp-for="Longitude" class="control-label"></label>
                    <input asp-for="Longitude" class="form-control" />
                    <span asp-validation-for="Longitude" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group" style="text-align:center">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-outline-primary">Voltar à lista de escolas</a>
</div>

@section Scripts{
    <script>
        $("#ensinos").change(function () {
            $("#ensinosSubmit").val(($("#ensinos").val() || []).join(''));
    });

    $("#concelhos").change(function () {
        $('#freguesias option:not(:first)').remove();
        getFreguesias();
    });

    function getFreguesias() {
            $.ajax
            ({
                type: "GET",
                url: '@Url.Action("GetFreguesias", "Escolas")',
                contentType: "application/json; charset=utf-8",
                data: { concelho: $("#concelhos option:selected").text() },
                dataType: 'json',
                success: function (data) {
                    if (data.length > 0) {
                        var freg = $('#freguesias');
                        $.each(data, function (i,item) {
                            freg.append(
                            $('<option></option>').val(item.id).html(item.nome)
                        );
                        });

                        freg.prop("disabled", false);
                    }
                    else {
                        $('#notfound2').show().delay(10000).hide("slow");
                    }
                    },
                    error: function (err) {
                        console.log(err)
                     }
            });
    }
    </script>
}
@model Pmat_PI.Models.EmailModel2
@{
    ViewData["Title"] = "EmailingTab";
}


<div class="text-center">
    <h1>Enviar Emails</h1>
</div>


<div id="email_div">
    <form asp-action="SendEmail" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Destino">Grupo Destino:</label>
            <select asp-for="Destino" id="target_users" class="form-control" aria-label="Default select example">
                <option value="All">EVERYONE</option>
                <option value="Admin">ADMINS</option>
                <option value="Professor">PROFESSORES</option>
                <option value="Aluno">ALUNOS</option>
            </select>
            <span asp-validation-for="Destino" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Assunto">Assunto:</label>
            <input asp-for="Assunto" class="form-control" id="assunto" placeholder="Assunto">
            <span asp-validation-for="Assunto" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Mensagem">Mensagem:</label>
            <textarea asp-for="Mensagem" class="form-control" id="mensagem" rows="4" placeholder="Escreva a sua mensagem aqui."></textarea>
            <span asp-validation-for="Mensagem" class="text-danger"></span>
        </div>

        <!--
    <div class="form-group">
        <label asp-for="Ficheiro">Ficheiros:</label>
        <input  id="file" type="file" multiple>
        <span asp-validation-for="Ficheiro" class="text-danger"></span>
    </div>
        -->
        <div class="form-group">
            <label for="file" class="form-label">Ficheiro:</label>
            <input class="form-control" id="file" type="file" name="file">
        </div>

        <input type="submit" value="Enviar Email" class="btn btn-outline-primary" />
    </form>
</div>

